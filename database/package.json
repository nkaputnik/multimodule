{
  "name": "@capire/database",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@capire/books": "*",
    "@capire/customers": "*",
    "@capire/orders": "*",
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2",
    "@sap/cds-mtxs": "^1.9",
    "@sap/xssec": "^3",
    "passport": "^0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "impl": "@cap-js/sqlite",
        "credentials": {
          "url": "../db.sqlite"
        },
        "multitenancy": true
      },
      "[production]": {
        "auth": "xsuaa",
        "db": {
          "kind": "hana"
        },
        "multitenancy": true
      },
      "auth": "xsuaa",
      "[local-multitenancy]": {
        "multitenancy": true
      }
    },
    "profile": "with-mtx-sidecar"
  }
}
